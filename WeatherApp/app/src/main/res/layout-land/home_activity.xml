<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background_android"
tools:context=".activity.HomeActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:logo="@drawable/logo_toolbar"
        app:navigationIcon="@drawable/icon_menu_white"
        app:title=" " />

    <LinearLayout
        android:id="@+id/date_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="94dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.25"
            android:lineSpacingMultiplier="1.15"
            android:text=""
            android:textAppearance="@style/date_time" />

        <DigitalClock
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/date_time" />

    </LinearLayout>

    <TextView
        android:id="@+id/place_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.17"
        android:text="@string/udupi_karnataka"
        android:textAppearance="@style/district_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_time_layout" />

    <LinearLayout
        android:id="@+id/favourite_layout"
        android:layout_width="119dp"
        android:layout_height="17dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="120dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/place_tv">

        <ImageView
            android:id="@+id/favourite_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_favourite" />

        <TextView
            android:layout_width="94dp"
            android:layout_height="15dp"
            android:text="@string/add_to_favourite"
            android:textAppearance="@style/AddToFavourite" />
    </LinearLayout>

    <ImageView
        android:id="@+id/weather_iv"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:src="@drawable/icon_sunny"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/temperature_name_tv"
        app:layout_constraintStart_toEndOf="@+id/place_tv"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar" />

    <LinearLayout
        android:id="@+id/display_temperature_layout"
        android:layout_width="119dp"
        android:layout_height="61dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="121dp"
        android:layout_marginEnd="120dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_toolbar">

        <TextView
            android:id="@+id/temperature_tv"
            android:layout_width="60dp"
            android:layout_height="61dp"
            android:gravity="left"
            android:lineSpacingMultiplier="1.17"
            android:text="31"
            android:textAppearance="@style/temperature" />

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="30dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/strokes"
            app:layout_constraintStart_toEndOf="@+id/degreevalue_tv"
            app:layout_constraintTop_toBottomOf="@+id/sun_iv">

            <TextView
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="&#xb0;C"
                android:textColor="#E32843" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="&#xb0;F"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/temperature_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="126dp"
        android:gravity="center"
        android:text="Mostly Sunny"
        android:textAppearance="@style/weather"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_temperature_layout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#1AFFFFFF"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/temp"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_marginStart="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/temp_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_temperature_info" />

            <TextView
                android:id="@+id/min_max"
                android:layout_width="57dp"
                android:layout_height="15dp"
                android:layout_marginStart="18dp"
                android:layout_toEndOf="@id/temp_iv"
                android:lineSpacingMultiplier="1.15"
                android:text="@string/min_max"
                android:textAppearance="@style/MinMax" />

            <TextView
                android:id="@+id/min_tv"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_below="@+id/min_max"
                android:layout_marginStart="38dp"
                android:layout_marginTop="5dp"
                android:text="22"
                android:textAppearance="@style/temp" />

            <TextView
                android:id="@+id/design"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_below="@+id/min_max"
                android:layout_marginStart="3dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/min_tv"
                android:text="-"
                android:textAppearance="@style/temp" />

            <TextView
                android:id="@+id/max_tv"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_below="@+id/min_max"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/design"
                android:text="34"
                android:textAppearance="@style/temp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/precipitation_layout"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/humidity_layout"
            app:layout_constraintStart_toEndOf="@+id/temp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/precipitation_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_precipitation_info" />

            <TextView
                android:id="@+id/precipitation"
                android:layout_width="76dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@id/precipitation_iv"
                android:lineSpacingMultiplier="1.15"
                android:text="@string/precipitation"
                android:textAppearance="@style/Precipitation_text" />

            <TextView
                android:id="@+id/precipitation_tv"
                android:layout_width="56dp"
                android:layout_height="21dp"
                android:layout_below="@+id/precipitation"
                android:layout_marginStart="42dp"
                android:layout_marginTop="5dp"
                android:text="0%"
                android:textAppearance="@style/Precipitation" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/humidity_layout"
            android:layout_width="94dp"
            android:layout_height="41dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/humidity_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_humidity_info" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@id/humidity_iv"
                android:lineSpacingMultiplier="1.15"
                android:text="Humidity"
                android:textAppearance="@style/Humidity_text" />

            <TextView
                android:id="@+id/humidity_tv"
                android:layout_width="56dp"
                android:layout_height="21dp"
                android:layout_below="@+id/humidity"
                android:layout_marginStart="38dp"
                android:layout_marginTop="5dp"
                android:text="47%"
                android:textAppearance="@style/Humidity" />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

<com.google.android.material.navigation.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:paddingTop="25dp"
    android:fitsSystemWindows="true"
    app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
